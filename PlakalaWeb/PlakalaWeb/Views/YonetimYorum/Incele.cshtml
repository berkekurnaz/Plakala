@model Yorum
@{
    ViewData["Title"] = "Incele";
    Layout = "~/Views/Shared/_LayoutYonetim.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-heading border bottom">
            <h4 class="card-title text-center">Yorum İncele</h4>
        </div>
        <div class="card-block">
            <div class="row">
                <div class="col-md-9 ml-auto mr-auto">
                    <form class="form-horizontal mrg-top-40 pdd-right-30 ng-pristine ng-valid">
                        <div class="form-group">
                            <label>Numara</label>
                            <input type="text" class="form-control" asp-for="Id" value="@Model.Id" readonly>
                        </div>
                        <div class="form-group">
                            <label>Plaka</label>
                            <input type="text" class="form-control" asp-for="PlakaId" value="@Model.PlakaId" readonly>
                        </div>
                        <div class="form-group">
                            <label>Eklenme Tarihi</label>
                            <input type="text" class="form-control" asp-for="EklenmeTarihi" value="@Model.EklenmeTarihi" readonly>
                        </div>
                        <div class="form-group">
                            <label>Yorum</label>
                            <input type="text" class="form-control" asp-for="PlakaYorum" value="@Model.PlakaYorum" readonly>
                        </div>
                        @if (Model.Resim != "bosdeger")
                        {
                            <div class="form-group">
                                <label>Resim</label>
                                <center><img src="~/img/plakalar/@Model.Resim" width="250" /></center>
                            </div>
                        }
                        <center>
                            <a href="/YonetimYorum/Index/" class="btn btn-info"><i class="fa fa-undo" aria-hidden="true"></i> Geriye Dön</a>
                            <a href="/YonetimYorum/Sil/@Model.Id" class="btn btn-danger"><i class="fa fa-trash" aria-hidden="true"></i> Sil</a>
                        </center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
