@model ReflectionIT.Mvc.Paging.IPagingList<Yorum>
@using ReflectionIT.Mvc.Paging
@addTagHelper *,ReflectionIT.Mvc.Paging
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Karla" rel="stylesheet">
    <link rel="stylesheet" href="~/dosyalartemp/src/css/secondpage.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Plakala</title>
</head>
<body>

    <main class="Main">
        <div class="Main-icon">
            <i class="fas fa-arrow-down"></i>
        </div>
        <nav class="Header-nav">
            <a href="/Anasayfa/Index/">Anasayfa</a>
            <a href="/Anasayfa/Index?#service-page">Nedir?</a>
            <a href="/Anasayfa/Index?#price-page">Nasıl Kullanılır?</a>
            <a href="/Anasayfa/Index?#team-page">Takım</a>
            <a href="/Anasayfa/Index?#price-page">İndir</a>
            <a href="/Anasayfa/Index?#faq-page">Sık Sorulanlar</a>
            <a href="/Anasayfa/Index?#contact-page">İletişim</a>
        </nav>
        <br />
        <div class="title">
            <h3>@ViewBag.PlakaAdi</h3>
            <p>Plakaya Yapılan Yorumlar : @ViewBag.PlakaSayisi</p>
        </div>
        <div class="timeline">

            <div class="container">
                @if (Model.Count() > 0)
                {
                    <div class="row">
                        @foreach (var item in Model)
                        {
                            <div class="col-md-6">
                                <div class="box">
                                    <div class="icon">
                                        <i class="fas fa-car fa-2x"></i>
                                    </div>
                                    <div class="content">
                                        @if (item.PlakaYorum.Length >= 35)
                                        {
                                            <p>@item.PlakaYorum.Substring(0, 35)...</p>
                                        }
                                        else
                                        {
                                            <p>@item.PlakaYorum</p>
                                        }
                                    </div>
                                    <div class="arrow">
                                        <a href="/Anasayfa/Yorum/@item.Id"><i class="fas fa-angle-double-right fa-2x"></i></a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {

                        <div class="card">
                            <div class="card-body text-center">
                                Bu Plaka Hakkında Yazılan Yorum Bulunamadı...
                            </div>
                        </div>

                }

            </div>

        </div>
    </main>

    <div class="container text-center">
        <br />
        @for (var p = 1; p <= Model.PageCount; p++)
        {
            <a href="@Url.Action("Listele", new { plaka=ViewBag.PlakaAdi,sayfa = p })" class="btn btn-outline-info page-item">@p</a>
        }
    </div>

    <script src="~/dosyalartemp/src/main.js"></script>
</body>
</html>