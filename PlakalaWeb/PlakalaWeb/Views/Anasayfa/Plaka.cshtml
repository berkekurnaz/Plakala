@model Yorum
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab:400,700" rel="stylesheet">
    <link rel="stylesheet" href="~/dosyalartemp/src/css/firstpage.css">
    <title>Plakala</title>
</head>
<body>

    <header class="Header">
        <div class="Header-icon">
            <i class="fas fa-arrow-down"></i>
        </div>
        <nav class="Header-nav">
            <a href="/Anasayfa/Index/">Anasayfa</a>
            <a href="/Anasayfa/Index?#service-page">Nedir?</a>
            <a href="/Anasayfa/Index?#price-page">Nasıl Kullanılır?</a>
            <a href="/Anasayfa/Index?#team-page">Takım</a>
            <a href="/Anasayfa/Index?#price-page">İndir</a>
            <a href="/Anasayfa/Index?#faq-page">Sık Sorulanlar</a>
            <a href="/Anasayfa/Index?#contact-page">İletişim</a>
        </nav>
    </header>

    <main class="Main">

        <form asp-controller="Anasayfa" asp-action="Listele" asp- method="post" enctype="multipart/form-data" class="Main-form">
            <h2>PLAKALA</h2>
            <input type="text" asp-for="Plaka" class="input" placeholder="Plakayı Buraya Yazınız" maxlength="8">
            <button type="submit" class="button">ARA</button>
        </form>

        <div class="container" style="bottom:10px;position:fixed;text-align:center">
            <p class="text-center" style="text-align:center;font-family:monospace;">Plakala Bir BK Teknoloji Ürünüdür ®</p>
        </div>

    </main>

    <script src="~/dosyalartemp/src/main.js"></script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

    <script>
        $("input").keyup(function () {
            this.value = this.value.toUpperCase();
            $(this).val($(this).val().replace(" ", ""));
        });
    </script>

</body>
</html>